import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
public class FrameExam {
	private Frame mainFrame;
	private Label headerLabel;
	private Label statusLabel;
	private Panel controlPanel;
	
	public FrameExam() {
		prepareGUI();
	}	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		FrameExam awtControlDemo = new FrameExam();
		awtControlDemo.showButton();
	}
	
	private void prepareGUI() {
		mainFrame = new Frame("Java AWT Sample");
		mainFrame.setSize(600, 600);
		mainFrame.setLayout(new GridLayout(3,1));
		mainFrame.addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent windowevent){
				System.exit(0);
			}
			
			
		});
		//상단에 있는 라벨
		headerLabel = new Label();
		headerLabel.setAlignment(Label.CENTER);
		headerLabel.setText("Control Test : Button");
		
		// 하단 상태값 라벨
		statusLabel = new Label();
		statusLabel.setText("Status Label");
		statusLabel.setAlignment(Label.CENTER);
		statusLabel.setSize(350, 100);
		
		controlPanel = new Panel();
		controlPanel.setLayout(new FlowLayout());
		
		mainFrame.add(headerLabel);
		mainFrame.add(controlPanel);
		mainFrame.add(statusLabel);
		mainFrame.setVisible(true);
	}

		private void showButton() {
			Button btnOk = new Button("OK");
			btnOk.setSize(300, 300);
			Button btnSumit = new Button("Submit");
			Button btnCancel = new Button("Cancel");
			
			btnOk.addActionListener(new ActionListener() {
				
				@Override
				public void actionPerformed(ActionEvent e) {
					// TODO Auto-generated method stub
					statusLabel.setText("OK Button clicked");
				}
			});
			
			btnSumit.addActionListener(new ActionListener() {
				
				@Override
				public void actionPerformed(ActionEvent e) {
					// TODO Auto-generated method stub
					statusLabel.setText("Submit Button Clicked");
					
				}
			});
			
			btnCancel.addActionListener(new ActionListener() {		
				@Override
				public void actionPerformed(ActionEvent e) {
					// TODO Auto-generated method stub
					statusLabel.setText("Cancel Button Clicked");
				}
			});
			
			controlPanel.add(btnOk);			
			controlPanel.add(btnSumit);
			controlPanel.add(btnCancel);
			
			mainFrame.setVisible(true);
		}
}
