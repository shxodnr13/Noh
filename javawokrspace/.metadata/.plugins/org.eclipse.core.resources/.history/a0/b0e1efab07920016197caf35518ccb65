import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.List;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Room extends JFrame implements ActionListener{
WaitingRoom wr;
JTextArea ta;
List list;
JTextField tf;
JButton b;
String id;
WaitingRoom waitingRoom, waitingRoom2;
String rn;
Room(String name, String rn, WaitingRoom waitingRoom)
{
	super(name+"'s chating window" + " roomname" + rn);
	this.rn = rn;
	this.waitingRoom = waitingRoom;
	id=name;
	ta = new JTextArea();
	ta.enableInputMethods(false);
	ta.setBackground(Color.WHITE);
	ta.setForeground(Color.black);
	list = new List();
	tf = new JTextField();
	b = new JButton("Exit");
	
	JPanel p1 = new JPanel();
	p1.setLayout(new BorderLayout());
	JPanel p2 = new JPanel();
	p2.setLayout(new BorderLayout());
	
	p1.add(ta);
	p1.add(list, "East");
	p2.add(tf);
	p2.add(b, "East");
	add(p1);
	add(p2, "South");
	tf.addActionListener(this);
	b.addActionListener(this);
}
@Override
public void actionPerformed(ActionEvent e) {
	// TODO Auto-generated method stub
	if(e.getSource()==b)
	{
		try {
			waitingRoom.sendMsg("roomout/"+id+"/"+rn);
			waitingRoom.dispose();
			dispose();
			setVisible(false);
			
			
		} catch (Exception e1) {
			// TODO: handle exception
			e1.printStackTrace();
		}
	}
	
	else if(e.getSource()==tf)
	{
		try {
			if(tf.getText().trim().length()>0)
			{
				waitingRoom.sendMsg("msg/"+id+"/"+rn+"/"+tf.getText());
				tf.setText("");
			}
		} catch (Exception e1) {
			// TODO: handle exception
			e1.printStackTrace();
		}
	}
	
}

}
